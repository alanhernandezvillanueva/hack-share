<template id="signup-template">

        <div class="modal-body">
          <h5>Enter Details</h5>
          <label>Username: </label>
          <input type="text" id="username" />
          <br />
          <label>Email: </label>
          <input type="text" id="email" />
          <br />
          <label>Password: </label>
          <input
            type="password"
            id="password-input"
            placeholder="min 4 characters "
          />
          <br />
          <button
            type="button"
            class="btn"
            id="submit-signup"
          >Signup</button>
          <div>
          <a
            href="/login"
            class="btn"
          >Login Instead</a>
        </div>
        </div>

      </div>
    </div>
  </div>

</template>

<div id="signup-content" class="card-grid"></div>

